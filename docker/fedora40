FROM fedora:40

ADD https://pki.jlab.org/JLabCA.crt /etc/pki/ca-trust/source/anchors/JLabCA.crt
RUN update-ca-trust

RUN yum -y update \
	&& yum -y check-update \
	&& yum clean packages \
	&& yum clean all

RUN yum install -y \
	cmake3 \
	make \
	git

RUN yum install -y \
    bash \
    glibc \
    gcc \
	gcc-c++ \
    gcc-fortran \
	gfortran \
    patch \
    rsync \
    scons \
    cmake \
    maven \
    git \
    svn \
    cvs \
    wget \
    curl \
    tzdata \
    mariadb-devel \
	python3-devel \
	python3-scons \
	python3-pip \
    java-21-openjdk \
	libX11-devel \
	libXpm-devel \
	libXft-devel \
	libXt-devel \
	libXmu-devel \
	expat-devel \
    environment-modules \
    procps \

RUN yum clean packages
RUN yum clean all
RUN rm -rf /var/cache/yum

